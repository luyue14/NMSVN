body { font-family:Verdana; font-size:14px; margin:0; line-height:150%;}

#container {margin:0px auto;width:100%}
	#canvas { float:left; padding:0px; /* background:#cff; */}
	#sidebar { float:right; height:auto; width:320px; overflow:auto;overflow-x: hidden;word-wrap: break-word;}

.clearfloat { clear:both; height:0; font-size: 1px; line-height: 0px;}

.hide{
	display:none;
}
.show{
	display:block;
}
#beginNode{
	width:120px;
	display:block;
	float:left;
}
#endNode{
	width:120px;
	display:block;
	float:right;
}

